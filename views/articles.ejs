<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Articles</title>
  <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/main.css" rel="stylesheet">
</head>
<body>
  <header class="bg-primary text-white p-3">
    <div class="container">
      <nav class="nav justify-content-center">
        <a class="nav-link text-white" href="/">Home</a>
        <a class="nav-link text-white" href="/about">About</a>
        <a class="nav-link text-white" href="/articles">Articles</a>
        <a class="nav-link text-white" href="/categories">Categories</a>
        <a class="nav-link text-white" href="/articles/add">Add Article</a>
      </nav>
    </div>
  </header>
  
  <main class="container my-4">
    <h2>Articles</h2>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Title</th>
          <th>Author</th>
          <th>Category</th>
          <th>Published</th>
          <th>Date</th>
        </tr>
      </thead>
      <tbody>
        <% articles.forEach(article => { %>
          <tr>
            <td><a href="/article/<%= article.id %>"><%= article.title %></a></td> <!-- Changed 'Id' to 'id' -->
            <td><%= article.author %></td>
            <td><%= article.category %></td>
            <td><%= article.published ? "Yes" : "No" %></td>
            <td><%= article.postDate %></td> <!-- Changed from articleDate to postDate -->
          </tr>
        <% }) %>
      </tbody>
    </table>
  </main>

  <footer class="bg-dark text-white text-center py-3">
